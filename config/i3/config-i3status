order += "ethernet _first_"
order += "battery all"
#order += "load"
order += "tztime local"


wireless _first_ {
        #format_up = "W: (%quality at %essid)"
        #format_up = "W: (%quality at %bitrate)"
        format_UP = "W : %essid"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

