URxvt.buffered: true

! Load extensions from perl library
URxvt.perl-ext: default,matcher,resize-font
! set clickable URLs
! URxvt.urlLauncher: /usr/bin/chromium
URxvt.urlLauncher: /usr/bin/google-chrome-stable
